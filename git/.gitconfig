[user]
	name = Liza Chevalier
	email = lizalc@pm.me
[help]
	autocorrect = 1
[diff]
	colorMoved = default
[merge]
	tool = vscode
[mergetool]
	keepBackup = false
[mergetool "vscode"]
	cmd = code-insiders --ozone-platform-hint=auto --wait $MERGED
[commit]
	verbose = true
[fetch]
	prune = true
	showForcedUpdates = true
[core]
	autocrlf = input
	pager = less -F
	excludesfile = ~/.files/git/.global.gitignore
	editor = nvim
[init]
	defaultBranch = main
[submodule]
	recurse = true
[rebase]
	autoStash = true
	autoSquash = true
	updateRefs = true
[checkout]
	defaultRemote = origin
[pull]
	ff = only
[pager]
	log = diff-highlight | less -x1,5 -F
	show = diff-highlight | less -x1,5 -F
	diff = diff-highlight | less -x1,5 -F
[color "diff-highlight"]
	oldHighlight = ul
	oldReset = noul
[includeIf "gitdir/i:/mnt/c/**"]
	path = ~/.files/git/.wsl.gitconfig
[includeIf "gitdir/i:**/work/**"]
	path = ~/.files/git/.work.gitconfig
[scalar]
	repo = /Users/liza/Programming/work/firmware-monorepo
[maintenance]
	repo = /Users/liza/Programming/work/firmware-monorepo
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
